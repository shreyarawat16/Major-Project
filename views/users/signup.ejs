<% layout('/layouts/boilerplate') -%>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Signup on Wanderlust </h1>
    <div class="col-6 offset-3">
        <form method="POST" action="/signup" class="needs-validation" novalidate>
             <div class="mt-3">
            <label for="username" class="form-label">Username</label>
            <input name="username" type="text" class="form-control" required id="username">
            <div class="valid-feedback">Username looks good!</div>
            <div class="invalid-feedback">Please enter a valid username</div>
            </div>

            <div class="mt-3">
                <label for="email" class="form-label">Email</label>
                <input name="email" type="text" class="form-control" required id="email">
                <div class="valid-feedback">Username looks good!</div>
                <div class="invalid-feedback">Please enter a valid username</div>
                </div>

                <div class="mt-3">
                    <label for="password" class="form-label"> Password</label>
                    <input name="password" type="password" class="form-control" required id="password">
                    <div class="valid-feedback">Username looks good!</div>
                    <div class="invalid-feedback">Please enter a valid username</div>
                    </div>
                <button class="btn btn-success mt-3 mb-2">Signup!</button>
        </form> 
    </div>
</div>