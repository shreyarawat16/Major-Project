<% layout('/layouts/boilerplate') -%>
<script>
    const mapToken= "<%= process.env.MAP_TOKEN %> " ;
    const listing= "<%- JSON.stringify(listing) %>" ;
</script>
<div class="row mt-3">
    <div class="col-8 offset-3 ">
    <h2> <%= listing.title %> </h2>
    </div>
    <div class="card listing-card col-5 offset-3 mt-4 show-card" style="width: 42rem;">
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="Listing image">
        <div class="card-body">
          <p class="card-text mt-2">  Owned by <i><%= listing.owner.username %> </i>  </p>
          <p class="card-text"><%= listing.description %> </p>
          <p class="card-text "> &#8377; <%= listing.price.toLocaleString("en-IN") %> </p> 
          <p class="card-text "><%= listing.location %></p>
          <p class="card-text "><%= listing.country %></p>
              
              
          </p>
        </div>
      <% if(currUser && listing.owner._id.equals(currUser._id)){ %>
        <div class="row mt-3 ">
            <div class="col-2 offset-2">
            <form method="GET" action="/listings/<%=listing._id%>/edit"> 
                <button class="btn btn-dark edit-btn "> EDIT  </button>
             </form>
            </div>
            <div class="col-2 offset-2">
                <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                    <button class="btn btn-dark del-btn"> DELETE</button>
                </form>

            </div>
         </div>
      <% } %>
           
<div class="col-13 offset-2.5 mt-3 mb-3">
    
    <% if(currUser){ %> 
        <hr>
    <h2> Leave a Review </h2>
  
<form method="POST" action="/listings/<%= listing._id%>/reviews" class="needs-validation" noValidate>
    <!-- <div class="mb-3 mt-3">
    
    <input class="form-range"  id="rating" name="review[rating]" > -->
    </div>
    <div class="mb-3">
        <label for="rating">Rating</label>
    <fieldset class="starability-slot">
       
        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
        <label for="first-rate1" title="Terrible">1 star</label>
        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
        <label for="first-rate2" title="Not good">2 stars</label>
        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
        <label for="first-rate3" title="Average">3 stars</label>
        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
        <label for="first-rate4" title="Very good">4 stars</label>
        <input type="radio" id="first-rate5" name="review[rating] value="5" />
        <label for="first-rate5" title="Amazing">5 stars</label>
      </fieldset>
    </div>
    <div class="mb-3 mt-3">
        <label class="form-label" for="comment">Comments</label>
        <textarea class="form-control"  name="review[comment]" id="comment" rows="8" cols="30"></textarea>
        <div class="invalid-feedback">Please add some comments for review.</div>
    </div>
    <button class="btn btn-dark add-btn">Submit</button>
</form>
<hr>
<% } %>
<% if(listing.reviews.length>0){ %>
<div class="row">
 <h4> All Reviews  </h4>
 <% for(let review of listing.reviews){ %>
    <div class="card col-5 offset-4 ms-3 mb-2"> 
        <div class="card-body">
            <h4 class="card-title"> @<%= review.author.username %></h4>
            <p class="starability-result card-text" data-rating="<%= review.rating%>">
            </p>
            <p class="card-text"><%=review.comment%> </p>

            
        </div>
        <form class="mb-3" method="POST" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE">
            <button class="btn btn-dark btn-sm">Delete Review</button>
        </form>
    </div>
    
     <% } %>
</div>
<%  }  %>
</div>

</div>  
</div>
</div>

   
           
 

